{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
                "moduleResolution": "Node",
                "esModuleInterop": true,
                "forceConsistentCasingInFileNames": true,
                "strict": true,
                "skipLibCheck": true,
                "outDir": "dist",
                "rootDir": "src",
                "resolveJsonModule": true,
                "declaration": true,
                "declarationDir": "dist"
        },
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
