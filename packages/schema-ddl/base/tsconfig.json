{
    "compilerOptions": {
        "target": "ES2017",
        "module": "Node16",
        "lib": ["ES2020"],
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node16",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "types": ["node"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "src/__tests__/**/*"]
}
