{
  "name": "@universo/i18n",
  "version": "1.0.0",
  "description": "Centralized i18n instance for Universo Platformo",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "sideEffects": true,
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./instance": {
      "types": "./src/instance.ts",
      "default": "./src/instance.ts"
    },
    "./registry": {
      "types": "./src/registry.ts",
      "default": "./src/registry.ts"
    },
    "./types": {
      "types": "./src/types.ts",
      "default": "./src/types.ts"
    },
    "./locales/en/common.json": {
      "default": "./src/locales/en/core/common.json"
    },
    "./locales/ru/common.json": {
      "default": "./src/locales/ru/core/common.json"
    },
    "./locales/*/*/*.json": {
      "default": "./src/locales/*/*/*.json"
    }
  },
  "files": [
    "src"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "dependencies": {
    "i18next": "catalog:",
    "i18next-browser-languagedetector": "^8.2.0",
    "react-i18next": "catalog:"
  },
  "peerDependencies": {
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "eslint": "catalog:",
    "typescript": "catalog:"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "localization",
    "universo",
    "platformo"
  ],
  "author": {
    "name": "Vladimir Levadnij and Teknokomo",
    "email": "info@universo.pro"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/teknokomo/universo-platformo-react.git",
    "directory": "packages/universo-i18n/base"
  }
}
