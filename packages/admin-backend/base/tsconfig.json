{
    "extends": "../../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationMap": true,
        "composite": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "types": ["node"],
        "module": "Node16",
        "moduleResolution": "node16",
        "target": "ES2020"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
