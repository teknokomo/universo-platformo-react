{
    "name": "@universo/rest-docs",
    "version": "3.0.0",
    "description": "Universo Platformo REST API documentation server with modular OpenAPI 3.1 specification",
    "scripts": {
        "build": "pnpm build:ts && pnpm build:openapi",
        "build:ts": "tsc",
        "build:openapi": "node scripts/bundle-openapi.js",
        "start": "node dist/index.js",
        "dev": "tsc-watch --onSuccess \"node dist/index.js\"",
        "validate": "openapi lint src/openapi/index.yml",
        "validate:bundled": "openapi lint dist/openapi-bundled.yml",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
    },
    "license": "SEE LICENSE IN LICENSE.md",
    "dependencies": {
        "@asteasolutions/zod-to-openapi": "^8.1.0",
        "@universo/types": "workspace:*",
        "express": "^4.18.2",
        "swagger-ui-express": "^5.0.1",
        "yaml": "^2.3.4",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@redocly/openapi-cli": "^1.0.0-beta.95",
        "@types/express": "^4.17.21",
        "@types/swagger-ui-express": "^4.1.6",
        "tsc-watch": "^6.2.1",
        "typescript": "^5.3.3"
    }
}
