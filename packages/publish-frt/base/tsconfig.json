{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020", "DOM"],
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowJs": false,
        "jsx": "react-jsx",
        "baseUrl": "./src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "@universo/publish-srv": ["../../publish-srv/base/src"],
            "@universo/publish-srv/*": ["../../publish-srv/base/src/*"],
            "@universo-platformo/utils": ["../../universo-platformo-utils/base/src"],
            "@universo-platformo/utils/*": ["../../universo-platformo-utils/base/src/*"],
            "@universo-platformo/types": ["../../universo-platformo-types/base/src"],
            "@universo-platformo/types/*": ["../../universo-platformo-types/base/src/*"],
            "@universo/template-mmoomm": ["../../template-mmoomm/base/dist/index.d.ts"],
            "@universo/template-quiz": ["../../template-quiz/base/dist/index.d.ts"]
        },
        "moduleResolution": "node",
        "noResolve": false
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
    "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx", "../../../packages/flowise-ui/**/*"]
}
